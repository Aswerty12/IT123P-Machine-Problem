<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edecda">
    <ImageView
        android:src="@drawable/logoright_sample"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/Logo_Design"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80px"
        />
    <ImageView
        android:src="@drawable/landing_page"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@+id/Logo_Design"
        android:minHeight="10px"
        android:minWidth="10px"
        android:layout_centerInParent="true"
        android:id="@+id/design1" 
        />
    <ImageButton
        android:src="@drawable/send_btn"
        android:backgroundTint="#edecda"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/design1"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:id="@+id/Send_BTN"
        />

    <ImageButton
        android:src="@drawable/recieve_btn"
        android:backgroundTint="#edecda"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="20px"
        android:layout_below="@+id/Send_BTN"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:id="@+id/Recieve_BTN" 
        />
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LogOut_BTN"
        android:id="@+id/textView1" 
        android:visibility="invisible"/>

    <ImageButton
        android:src="@drawable/logout_btn"
        android:backgroundTint="#edecda"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20px"
        android:layout_below="@+id/Recieve_BTN"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:id="@+id/LogOut_BTN" 
        />
</RelativeLayout>