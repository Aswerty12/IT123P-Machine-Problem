<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edecda">

    <ImageView
        android:src="@drawable/description_img"
        android:background="#edecda"
        android:layout_marginTop="10px"
        android:layout_width="550dp"
        android:layout_height="250dp"
        android:id="@+id/Logo_Desc"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginLeft="0.0dp"
        />

    <TextView
        android:text="Login"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Logo_Desc"
        android:layout_marginTop="0.0dp"
        android:layout_marginLeft="15.0dp"
        android:id="@+id/LOGIN"
        />
    <ImageView
        android:src="@drawable/line"
        android:layout_below="@+id/LOGIN"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_marginLeft="20px"
        android:layout_marginTop="3dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/imageView2" />

    <ImageView
        android:src="@drawable/username"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:minWidth="1px"
        android:minHeight="1px"
        android:layout_below="@+id/imageView2"
        android:id="@+id/User_Icon"
        />

    <EditText
        android:hint="Username"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/User_Icon"
        android:layout_below="@+id/imageView2"
        android:id="@+id/Username_Line"
        android:lines="1"
        android:layout_marginRight="50.0dp"
        android:layout_marginTop="10.0dp"
        />

    <ImageView
        android:src="@drawable/password"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:minWidth="1px"
        android:minHeight="1px"
        android:layout_below="@+id/User_Icon"
        android:id="@+id/Pass_Icon"
        />

    <EditText
        android:hint="Password"
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Pass_Icon"
        android:layout_below="@+id/User_Icon"
        android:id="@+id/Password_Line"
        android:lines="1"
        android:layout_marginRight="50.0dp"
        android:layout_marginTop="10.0dp"
        />
    <TextView
        android:text="Already have an account?"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dp"
        android:layout_below="@+id/Password_Line"
        android:layout_toLeftOf="@+id/Register_Clck"
        android:id="@+id/textView1"
        android:textColor="#000"
        />
    <TextView
        android:text="Register Here!"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dp"
        android:layout_marginLeft="5.0dp"
        android:layout_below="@+id/Password_Line"
        android:linksClickable="true"
        android:layout_alignParentRight="true"
        android:id="@+id/Register_Clck"
        android:layout_marginEnd="70.0dp"
        android:autoLink="all"
        android:textColor="#000"
        android:textColorLink="#FF0000"
        />

    <ImageButton
        android:src="@drawable/main_btn"
        android:backgroundTint="#edecda"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="40.0px"
        android:layout_below="@+id/Register_Clck"
        android:id="@+id/Main_Btn"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        />


</RelativeLayout>
