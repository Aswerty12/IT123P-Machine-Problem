<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edecda">
    <ImageView
        android:src="@drawable/logoleft_sample"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/Logo_Design"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="60px"
        />

    <ImageButton
        android:src="@drawable/recieve_btn"
        android:backgroundTint="#edecda"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_below="@+id/Logo_Design"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginBottom="52px"
        android:id="@+id/recieve_BTN"
        />
 
    <TextView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="#ebddcf"
        android:layout_centerInParent="true"
        android:layout_below="@+id/recieve_BTN"
        android:id="@+id/message_Box" />
    
    <ImageView
        android:src="@drawable/recieving_page"
       android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="170dp"
        android:layout_below="@+id/recieve_BTN"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginLeft="15dp"
        android:id="@+id/imageView1"
        />
 

    <ImageButton
        android:src="@drawable/logout_btn"
        android:backgroundTint="#edecda"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="50px"
        android:layout_below="@+id/message_Box"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:id="@+id/LogOut_BTN" 
        />
    <ImageButton
        android:src="@drawable/warning"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:backgroundTint="#ebddcf"
        android:layout_above="@+id/LogOut_BTN"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:layout_marginBottom="234dp"
        android:scaleType="centerCrop"
        android:id="@+id/Report_Btn" />
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LogOut_BTN"
        android:id="@+id/textView1" 
        android:visibility="invisible"/>
    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LogOut_BTN"
        android:id="@+id/textView2" 
        android:visibility="invisible"/>
</RelativeLayout>